                </DockPanel>
            </Border>
            
            <!-- Splitter -->
            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Background="#DDD"/>
            
            <!-- Zone principale -->
            <Border Grid.Column="2" Background="White">
                <DockPanel>
