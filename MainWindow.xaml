<Window x:Class="TextLabClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TextLab Client" Height="650" Width="1000"
        MinHeight="500" MinWidth="800"
        KeyDown="MainWindow_KeyDown">
    
    <DockPanel>
        <!-- Menu principal -->
        <Menu DockPanel.Dock="Top" Background="#F8F8F8" Padding="5">
            <MenuItem Header="_Fichier">
                <MenuItem Click="NewDocumentButton_Click" InputGestureText="Ctrl+N">
                    <MenuItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ“" FontSize="14" Margin="0,0,5,0"/>
                            <TextBlock Text="_Nouveau Document"/>
                        </StackPanel>
                    </MenuItem.Header>
                </MenuItem>
                <Separator/>
                <MenuItem Click="RefreshButton_Click" InputGestureText="F5">
                    <MenuItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ”„" FontSize="14" Margin="0,0,5,0"/>
                            <TextBlock Text="_Actualiser"/>
                        </StackPanel>
                    </MenuItem.Header>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="_Aide">
                <MenuItem Click="AboutButton_Click">
                    <MenuItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="â„¹ï¸" FontSize="14" Margin="0,0,5,0"/>
                            <TextBlock Text="Ã€ _propos"/>
                        </StackPanel>
                    </MenuItem.Header>
                </MenuItem>
                <Separator/>
                <MenuItem Click="LogsButton_Click">
                    <MenuItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ“‹" FontSize="14" Margin="0,0,5,0"/>
                            <TextBlock Text="Voir les _Logs"/>
                        </StackPanel>
                    </MenuItem.Header>
                </MenuItem>
                <MenuItem Click="OpenLogsFolderButton_Click">
                    <MenuItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ“" FontSize="14" Margin="0,0,5,0"/>
                            <TextBlock Text="Ouvrir _Dossier Logs"/>
                        </StackPanel>
                    </MenuItem.Header>
                </MenuItem>
            </MenuItem>
        </Menu>
        
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Barre d'outils -->
        <Border Grid.Row="0" Background="#F5F5F5" Margin="10" Padding="10" BorderBrush="#DDD" BorderThickness="1" CornerRadius="5">
            <StackPanel>
                <!-- Ligne 1: Connexion API -->
                <StackPanel Orientation="Horizontal" Margin="0,5,0,10">
                        <TextBlock Text="URL API:" VerticalAlignment="Center" Margin="5,0,5,0"/>
                        <TextBox Name="ApiUrlTextBox" Width="300" Text="https://textlab-api.onrender.com" Margin="0,0,0,0"/>
                        <Button Name="TestConnectionButton" Content="Test Connexion" Margin="10,0,10,0" Padding="10,3" Click="TestConnectionButton_Click"/>
                        <TextBlock Name="ConnectionStatusText" Text="Non testÃ©" VerticalAlignment="Center" Margin="10,0,0,0" FontWeight="Bold"/>
                </StackPanel>
            
                <!-- Ligne 2: Actions Documents -->
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <!-- Groupe Document -->
                <Border BorderBrush="#DDD" BorderThickness="1" Padding="5" Margin="0,0,10,0" Background="White">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ“„ Document:" VerticalAlignment="Center" FontWeight="Bold" Margin="0,0,10,0"/>
                        <Button x:Name="NewDocumentButton" Content="ðŸ“ Nouveau" 
                                Width="90" Height="25" Margin="0,0,5,0" 
                                Click="NewDocumentButton_Click" 
                                IsEnabled="False"
                                ToolTip="CrÃ©er un nouveau document"/>
                        <Button x:Name="EditDocumentButton" Content="âœï¸ Modifier" 
                                Width="90" Height="25" Margin="0,0,5,0" 
                                IsEnabled="False"
                                ToolTip="FonctionnalitÃ© non disponible dans l'API TextLab"/>
                        <Button x:Name="DeleteDocumentButton" Content="ðŸ—‘ï¸ Supprimer" 
                                Width="90" Height="25" Margin="0,0,0,0" 
                                IsEnabled="False"
                                ToolTip="FonctionnalitÃ© non disponible dans l'API TextLab"/>
                    </StackPanel>
                </Border>
                
                <!-- Groupe Versions -->
                <Border BorderBrush="#DDD" BorderThickness="1" Padding="5" Margin="0,0,10,0" Background="White">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ”„ Versions:" VerticalAlignment="Center" FontWeight="Bold" Margin="0,0,10,0"/>
                        <Button x:Name="RestoreVersionButton" Content="ðŸ”„ Restaurer" 
                                Width="90" Height="25" Margin="0,0,5,0" 
                                IsEnabled="False"
                                ToolTip="Restaurer une version sÃ©lectionnÃ©e"/>
                        <Button x:Name="CompareVersionsButton" Content="ðŸ“Š Comparer" 
                                Width="90" Height="25" Margin="0,0,0,0" 
                                IsEnabled="False"
                                ToolTip="Comparer deux versions"/>
                    </StackPanel>
                </Border>
                
                <!-- Groupe Repository -->
                <Border BorderBrush="#DDD" BorderThickness="1" Padding="5" Margin="0,0,0,0" Background="White">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ“ Repo:" VerticalAlignment="Center" FontWeight="Bold" Margin="0,0,10,0"/>
                        <Button x:Name="SyncRepositoryButton" Content="ðŸ“¥ Sync" 
                                Width="70" Height="25" Margin="0,0,5,0" 
                                IsEnabled="False"
                                ToolTip="Synchroniser avec le repository distant"/>
                        <Button x:Name="RefreshButton" Content="ðŸ”„ Actualiser" 
                                Width="90" Height="25" Margin="0,0,0,0" 
                                Click="RefreshButton_Click"
                                ToolTip="Actualiser la liste des documents"/>
                    </StackPanel>
                </Border>
                </StackPanel>
            </StackPanel>
        </Border>
        
        <!-- Contenu principal -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Panel gauche - Repositories -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0" Text="Repositories" FontSize="14" FontWeight="Bold" Margin="0,0,0,10"/>
                
                <ListBox Grid.Row="1" Name="RepositoriesListBox" SelectionChanged="RepositoriesListBox_SelectionChanged" Margin="0,0,0,10">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Vertical" Margin="5">
                                <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                                <TextBlock Text="{Binding Type}" FontSize="10" Foreground="Blue"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                
                <StackPanel Grid.Row="2" Orientation="Vertical">
                    <TextBlock Name="RepositoryInfoText" Text="SÃ©lectionnez un repository" FontSize="10" Foreground="Gray"/>
                    <Button Name="RefreshRepositoriesButton" Content="Actualiser" Margin="0,5,0,0" Click="RefreshRepositoriesButton_Click"/>
                </StackPanel>
            </Grid>
            
            <!-- SÃ©parateur -->
            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Background="LightGray"/>
            
            <!-- Panel droit - Contenu du repository -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10,0,0,10">
                    <TextBlock Name="SelectedRepositoryText" Text="Aucun repository sÃ©lectionnÃ©" FontSize="14" FontWeight="Bold"/>
                    <Button Name="LoadDocumentsButton" Content="Charger Documents" Margin="20,0,0,0" Click="LoadDocumentsButton_Click" IsEnabled="False"/>
                </StackPanel>
                
                <TreeView Grid.Row="1" Name="DocumentsTreeView" Margin="10,0,0,0" SelectedItemChanged="DocumentsTreeView_SelectedItemChanged" MouseDoubleClick="DocumentsTreeView_MouseDoubleClick">
                    <TreeView.ItemTemplate>
                        <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding Icon}" Margin="0,0,5,0"/>
                                <TextBlock Text="{Binding Name}"/>
                                <TextBlock Text="{Binding Info}" Foreground="Gray" Margin="10,0,0,0" FontSize="10"/>
                            </StackPanel>
                        </HierarchicalDataTemplate>
                    </TreeView.ItemTemplate>
                </TreeView>
            </Grid>
        </Grid>
        
        <!-- Status bar -->
        <Border Grid.Row="2" Background="#F0F0F0" BorderBrush="#D0D0D0" BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" Name="StatusText" Text="PrÃªt" Margin="10,5" VerticalAlignment="Center"/>
                <TextBlock Grid.Column="1" Name="ApiVersionText" Text="" Margin="10,5" VerticalAlignment="Center" FontSize="10"/>
                <TextBlock Grid.Column="2" Name="CurrentApiUrlText" Text="" Margin="10,5" VerticalAlignment="Center" FontSize="10" Foreground="Blue"/>
            </Grid>
        </Border>
    </Grid>
    </DockPanel>
</Window> 