<Window x:Class="TextLabClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TextLab Client" Height="600" Width="900">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Barre d'outils -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10" Background="#F5F5F5">
            <TextBlock Text="URL API:" VerticalAlignment="Center" Margin="5,0,5,0"/>
            <TextBox Name="ApiUrlTextBox" Width="300" Text="https://textlab-api.onrender.com" Margin="0,5,0,5"/>
            <Button Name="TestConnectionButton" Content="Test Connexion" Margin="10,5,10,5" Padding="10,3" Click="TestConnectionButton_Click"/>
            <TextBlock Name="ConnectionStatusText" Text="Non testé" VerticalAlignment="Center" Margin="10,0,0,0" FontWeight="Bold"/>
        </StackPanel>
        
        <!-- Contenu principal -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Panel gauche - Repositories -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0" Text="Repositories" FontSize="14" FontWeight="Bold" Margin="0,0,0,10"/>
                
                <ListBox Grid.Row="1" Name="RepositoriesListBox" SelectionChanged="RepositoriesListBox_SelectionChanged" Margin="0,0,0,10">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Vertical" Margin="5">
                                <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                                <TextBlock Text="{Binding Type}" FontSize="10" Foreground="Blue"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                
                <StackPanel Grid.Row="2" Orientation="Vertical">
                    <TextBlock Name="RepositoryInfoText" Text="Sélectionnez un repository" FontSize="10" Foreground="Gray"/>
                    <Button Name="RefreshRepositoriesButton" Content="Actualiser" Margin="0,5,0,0" Click="RefreshRepositoriesButton_Click"/>
                </StackPanel>
            </Grid>
            
            <!-- Séparateur -->
            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Background="LightGray"/>
            
            <!-- Panel droit - Contenu du repository -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10,0,0,10">
                    <TextBlock Name="SelectedRepositoryText" Text="Aucun repository sélectionné" FontSize="14" FontWeight="Bold"/>
                    <Button Name="LoadDocumentsButton" Content="Charger Documents" Margin="20,0,0,0" Click="LoadDocumentsButton_Click" IsEnabled="False"/>
                </StackPanel>
                
                <TreeView Grid.Row="1" Name="DocumentsTreeView" Margin="10,0,0,0" SelectedItemChanged="DocumentsTreeView_SelectedItemChanged" MouseDoubleClick="DocumentsTreeView_MouseDoubleClick">
                    <TreeView.ItemTemplate>
                        <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding Icon}" Margin="0,0,5,0"/>
                                <TextBlock Text="{Binding Name}"/>
                                <TextBlock Text="{Binding Info}" Foreground="Gray" Margin="10,0,0,0" FontSize="10"/>
                            </StackPanel>
                        </HierarchicalDataTemplate>
                    </TreeView.ItemTemplate>
                </TreeView>
            </Grid>
        </Grid>
        
        <!-- Status bar -->
        <Border Grid.Row="2" Background="#F0F0F0" BorderBrush="#D0D0D0" BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" Name="StatusText" Text="Prêt" Margin="10,5" VerticalAlignment="Center"/>
                <TextBlock Grid.Column="1" Name="ApiVersionText" Text="" Margin="10,5" VerticalAlignment="Center" FontSize="10"/>
                <TextBlock Grid.Column="2" Name="CurrentApiUrlText" Text="" Margin="10,5" VerticalAlignment="Center" FontSize="10" Foreground="Blue"/>
            </Grid>
        </Border>
    </Grid>
</Window> 