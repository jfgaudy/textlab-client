<Window x:Class="TextLabClient.CredentialsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Credentials Configuration" Height="300" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="🔐 Git Credentials Configuration" 
                   FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>

        <TextBlock Grid.Row="1" Text="Username:" Margin="0,0,0,5"/>
        <TextBox Name="TxtUsername" Grid.Row="2" Padding="8" Margin="0,0,0,15"/>

        <TextBlock Grid.Row="3" Text="Access Token:" Margin="0,0,0,5"/>
        <Grid Grid.Row="4" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <PasswordBox Name="TxtToken" Grid.Column="0" Padding="8"/>
            <TextBox Name="TxtTokenPlain" Grid.Column="0" Padding="8" Visibility="Collapsed"/>
            <CheckBox Name="ChkShowToken" Grid.Column="1" Content="Afficher" Margin="8,0,8,0" VerticalAlignment="Center" Checked="ChkShowToken_Checked" Unchecked="ChkShowToken_Unchecked"/>
            <Button Name="BtnCopyToken" Grid.Column="2" Content="Copier" Padding="12,8" Click="BtnCopyToken_Click"/>
        </Grid>

        <TextBlock Grid.Row="5" TextWrapping="Wrap" FontSize="11" Foreground="Gray" 
                   Text="For GitHub, use a Personal Access Token. For local repositories, leave empty if no authentication is required."/>

        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Name="BtnOk" Content="✅ OK" 
                    Background="#107C10" Foreground="White" 
                    Padding="15,8" Margin="0,0,10,0" 
                    Click="BtnOk_Click"/>
            <Button Name="BtnCancel" Content="❌ Cancel" 
                    Background="#D13438" Foreground="White" 
                    Padding="15,8"
                    Click="BtnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window> 