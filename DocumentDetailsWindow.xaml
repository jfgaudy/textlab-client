<Window x:Class="TextLabClient.DocumentDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Document Details" Height="900" Width="1400"
        WindowStartupLocation="CenterOwner"
        Background="#F5F5F5">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header moderne avec titre du document -->
        <Border Grid.Row="0" Background="White" 
                BorderBrush="#DDDDDD" BorderThickness="0,0,0,1" 
                Padding="25,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBlock Text="📄" FontSize="20" Margin="0,0,10,0" VerticalAlignment="Center"/>
                        <TextBlock Name="DocumentTitleText" Text="Loading..." FontSize="20" FontWeight="Bold"
                                  Foreground="#0066CC" VerticalAlignment="Center"/>
                    </StackPanel>
                    <TextBlock Name="DocumentPathText" Text="" FontSize="12" 
                              Foreground="Gray" Margin="30,0,0,0"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Name="RefreshButton" Content="🔄 Refresh" 
                           Background="#6C757D" Foreground="White" BorderThickness="0" Padding="10,5" Click="RefreshButton_Click"/>
                    <Button Name="OpenInBrowserButton" Content="🌐 GitHub" 
                           Background="#6C757D" Foreground="White" BorderThickness="0" Padding="10,5" Click="OpenInBrowserButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Contenu principal avec onglets modernisés -->
        <TabControl Grid.Row="1" Background="Transparent" Margin="20">
            
            <!-- Onglet Informations modernisé -->
            <TabItem Header="📋 Information" FontSize="14">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Colonne gauche -->
                        <StackPanel Grid.Column="0">
                            <!-- Card Métadonnées -->
                            <Border Background="White" BorderBrush="#DDDDDD" BorderThickness="1" CornerRadius="4" Padding="15" Margin="0,0,0,20">
                                <StackPanel>
                                    <TextBlock Text="📊 Metadata" FontSize="16" FontWeight="Bold" 
                                              Foreground="#0066CC" Margin="0,0,0,15"/>
                                    
                                    <Grid Margin="0,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="ID:" FontWeight="SemiBold"/>
                                        <TextBlock Grid.Column="1" Name="DocumentIdText" Text="-" 
                                                  FontFamily="Consolas" Background="#F8F9FA" Padding="4,2"/>
                                    </Grid>
                                    
                                    <Grid Margin="0,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="Titre:" FontWeight="SemiBold"/>
                                        <TextBlock Grid.Column="1" Name="DocumentTitleDetailText" Text="-" 
                                                  TextWrapping="Wrap"/>
                                    </Grid>
                                    
                                    <Grid Margin="0,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="Category:" FontWeight="SemiBold"/>
                                        <Border Grid.Column="1" Background="#0066CC" 
                                               CornerRadius="12" Padding="8,4" HorizontalAlignment="Left">
                                            <TextBlock Name="DocumentCategoryText" Text="-" 
                                                      Foreground="White" FontSize="11" FontWeight="SemiBold"/>
                                        </Border>
                                    </Grid>
                                    
                                    <Grid Margin="0,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="Repository:" FontWeight="SemiBold"/>
                                        <TextBlock Grid.Column="1" Name="DocumentRepositoryText" Text="-"/>
                                    </Grid>
                                </StackPanel>
                            </Border>
                            
                            <!-- Card Fichier -->
                            <Border Background="White" BorderBrush="#DDDDDD" BorderThickness="1" CornerRadius="4" Padding="15">
                                <StackPanel>
                                    <TextBlock Text="📁 Informations Fichier" FontSize="16" FontWeight="Bold" 
                                              Foreground="#0066CC" Margin="0,0,0,15"/>
                                    
                                    <Grid Margin="0,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="Chemin Git:" FontWeight="SemiBold"/>
                                        <TextBlock Grid.Column="1" Name="DocumentGitPathText" Text="-" 
                                                  TextWrapping="Wrap" FontFamily="Consolas" FontSize="11"
                                                  Background="#F8F9FA" Padding="4,2"/>
                                    </Grid>
                                    
                                    <Grid Margin="0,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="Taille:" FontWeight="SemiBold"/>
                                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                                            <TextBlock Text="📄" Margin="0,0,5,0"/>
                                            <TextBlock Name="DocumentSizeText" Text="-"/>
                                        </StackPanel>
                                    </Grid>
                                    
                                    <Grid Margin="0,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="Version:" FontWeight="SemiBold"/>
                                        <TextBlock Grid.Column="1" Name="DocumentVersionText" Text="-"
                                                  FontFamily="Consolas" Background="#F8F9FA" Padding="4,2"/>
                                    </Grid>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                        
                        <!-- Colonne droite -->
                        <StackPanel Grid.Column="2">
                            <!-- Card Dates -->
                            <Border Background="White" BorderBrush="#DDDDDD" BorderThickness="1" CornerRadius="4" Padding="15" Margin="0,0,0,20">
                                <StackPanel>
                                    <TextBlock Text="📅 Dates" FontSize="16" FontWeight="Bold" 
                                              Foreground="#0066CC" Margin="0,0,0,15"/>
                                    
                                    <Grid Margin="0,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="Created:" FontWeight="SemiBold"/>
                                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                                            <TextBlock Text="🕒" Margin="0,0,5,0"/>
                                            <TextBlock Name="DocumentCreatedText" Text="-"/>
                                        </StackPanel>
                                    </Grid>
                                    
                                    <Grid Margin="0,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="Modified:" FontWeight="SemiBold"/>
                                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                                            <TextBlock Text="✏️" Margin="0,0,5,0"/>
                                            <TextBlock Name="DocumentUpdatedText" Text="-"/>
                                        </StackPanel>
                                    </Grid>
                                </StackPanel>
                            </Border>
                            
                            <!-- Card Tags -->
                            <Border Background="White" BorderBrush="#DDDDDD" BorderThickness="1" CornerRadius="4" Padding="15" Margin="0,0,0,20">
                                <StackPanel>
                                    <Grid Margin="0,0,0,15">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="🏷️ Tags" FontSize="16" FontWeight="Bold" 
                                                  Foreground="#0066CC"/>
                                        <Button Grid.Column="1" Name="OpenTagEditorButton" Content="🏷️" 
                                               Background="#0066CC" Foreground="White" BorderThickness="0" 
                                               Width="32" Height="28" Padding="0" Click="OpenTagEditorButton_Click"
                                               ToolTip="Manage and select tags"/>
                                    </Grid>
                                    
                                    <!-- Tags existants -->
                                    <ScrollViewer Name="ExistingTagsScrollViewer" MaxHeight="120" 
                                                 VerticalScrollBarVisibility="Auto" Margin="0,0,0,10">
                                        <WrapPanel Name="ExistingTagsPanel" Orientation="Horizontal"/>
                                    </ScrollViewer>
                                    
                                    <!-- Ajout de nouveaux tags -->
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox Grid.Column="0" Name="NewTagTextBox" 
                                                Tag="Add a tag..."
                                                KeyDown="NewTagTextBox_KeyDown"
                                                Height="32" VerticalContentAlignment="Center"
                                                Background="White" BorderBrush="#DDDDDD" BorderThickness="1" 
                                                Padding="8,6,8,6" FontSize="12"/>
                                        <Button Grid.Column="1" Name="AddTagButton" Content="+" 
                                               Background="#28A745" Foreground="White" BorderThickness="0"
                                               Width="32" Height="32" Margin="5,0,0,0" Click="AddTagButton_Click"
                                               FontSize="16" FontWeight="Bold"/>
                                    </Grid>
                                    
                                    <!-- Message d'aide -->
                                    <TextBlock Text="💡 Type a tag name and press Enter or +. Tags will be created automatically if they don't exist." 
                                              FontSize="10" Foreground="Gray" Margin="0,8,0,0" TextWrapping="Wrap"/>
                                </StackPanel>
                            </Border>
                            
                            <!-- Card Actions -->
                            <Border Background="White" BorderBrush="#DDDDDD" BorderThickness="1" CornerRadius="4" Padding="15">
                                <StackPanel>
                                    <TextBlock Text="⚡ Quick Actions" FontSize="16" FontWeight="Bold" 
                                              Foreground="#0066CC" Margin="0,0,0,15"/>
                                    
                                    <Button Content="🔄 Refresh Data" 
                                           Background="#0066CC" Foreground="White" BorderThickness="0" Padding="10,5" Click="RefreshButton_Click"
                                           Margin="0,5"/>
                                    <Button Content="🌐 View on GitHub" 
                                           Background="#6C757D" Foreground="White" BorderThickness="0" Padding="10,5" Click="OpenInBrowserButton_Click"
                                           Margin="0,5"/>
                                    <Button Content="📋 Copy ID" 
                                           Background="#6C757D" Foreground="White" BorderThickness="0" Padding="10,5" Click="CopyIdButton_Click"
                                           Margin="0,5"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Grid>
                </ScrollViewer>
            </TabItem>
            
            <!-- Onglet Contenu modernisé -->
            <TabItem Header="📄 Content" FontSize="14">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Toolbar moderne -->
                    <Border Grid.Row="0" Background="White" BorderBrush="#DDDDDD" BorderThickness="1" CornerRadius="4" Padding="15" Margin="20,20,20,10">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📝 Contenu du Document" FontSize="16" FontWeight="Bold" 
                                      Foreground="#0066CC" VerticalAlignment="Center"/>
                            
                            <!-- Mode lecture -->
                            <StackPanel Name="ReadModeButtons" Orientation="Horizontal" Margin="20,0,0,0">
                                <Button Name="EditDocumentButton" Content="✏️ Éditer" 
                                       Background="#0066CC" Foreground="White" BorderThickness="0" Padding="10,5" Click="EditDocumentButton_Click" 
                                       Margin="0,0,10,0"/>
                                <Button Name="CopyContentButton" Content="📋 Copier" 
                                       Background="#6C757D" Foreground="White" BorderThickness="0" Padding="10,5" Click="CopyContentButton_Click" 
                                       Margin="0,0,10,0"/>
                            </StackPanel>
                            
                            <!-- Mode édition -->
                            <StackPanel Name="EditModeButtons" Orientation="Horizontal" Margin="20,0,0,0" Visibility="Collapsed">
                                <Button Name="SaveDocumentButton" Content="💾 Enregistrer" 
                                       Background="#0066CC" Foreground="White" BorderThickness="0" Padding="10,5" Click="SaveDocumentButton_Click" 
                                       Margin="0,0,10,0"/>
                                <Button Name="CancelEditButton" Content="❌ Annuler" 
                                       Background="#6C757D" Foreground="White" BorderThickness="0" Padding="10,5" Click="CancelEditButton_Click" 
                                       Margin="0,0,10,0"/>
                            </StackPanel>
                            
                            <TextBlock Name="EditModeIndicator" Text="✏️ Edit Mode" 
                                      FontWeight="Bold" Foreground="Orange" VerticalAlignment="Center" 
                                      Margin="15,0,0,0" Visibility="Collapsed"/>
                            
                            <TextBlock Name="ContentSizeText" Text="" VerticalAlignment="Center" 
                                      Margin="15,0,0,0" FontSize="12" Foreground="Gray"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Pas d'édition de titre - seul le contenu est éditable -->
                    
                    <!-- Zone de contenu -->
                    <Border Grid.Row="1" Background="White" BorderBrush="#DDDDDD" BorderThickness="1" CornerRadius="4" Padding="15" Margin="20,10,20,20">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                            <TextBox Name="DocumentContentTextBox" 
                                     IsReadOnly="True" 
                                     TextWrapping="Wrap" 
                                     AcceptsReturn="True"
                                     FontFamily="Consolas"
                                     FontSize="13"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     Padding="15"
                                     Text="Chargement du contenu..."/>
                        </ScrollViewer>
                    </Border>
                </Grid>
            </TabItem>
            
            <!-- Onglet Versions modernisé -->
            <TabItem Header="📚 Versions" FontSize="14">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Toolbar moderne -->
                    <Border Grid.Row="0" Background="White" BorderBrush="#DDDDDD" BorderThickness="1" CornerRadius="4" Padding="15" Margin="20,20,20,10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                <TextBlock Text="📜 Historique des Versions" FontSize="16" FontWeight="Bold" 
                                          Foreground="#0066CC" VerticalAlignment="Center"/>
                                <TextBlock Name="VersionCountText" Text="" VerticalAlignment="Center" 
                                          Margin="15,0,0,0" FontSize="12" Foreground="Gray"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <Button Name="ViewVersionButton" Content="👁️ Voir" 
                                       Background="#6C757D" Foreground="White" BorderThickness="0" Padding="10,5" Click="ViewVersionButton_Click" 
                                       IsEnabled="False" Margin="5,0"/>
                                <Button Name="RestoreVersionButton" Content="⏮️ Restaurer" 
                                       Background="#0066CC" Foreground="White" BorderThickness="0" Padding="10,5" Click="RestoreVersionButton_Click" 
                                       IsEnabled="False" Margin="5,0"/>
                                <Button Name="CompareVersionButton" Content="🔍 Comparer (2)" 
                                       Background="#6C757D" Foreground="White" BorderThickness="0" Padding="10,5" Click="CompareVersionButton_Click" 
                                       IsEnabled="False" Margin="5,0" 
                                       ToolTip="Sélectionnez 2 versions avec Ctrl+clic pour les comparer"/>
                                <Button Name="CopyVersionButton" Content="📋 Copier" 
                                       Background="#6C757D" Foreground="White" BorderThickness="0" Padding="10,5" Click="CopyVersionButton_Click" 
                                       IsEnabled="False" Margin="5,0"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                    
                    <!-- DataGrid moderne -->
                    <Border Grid.Row="1" Background="White" BorderBrush="#DDDDDD" BorderThickness="1" CornerRadius="4" Padding="15" Margin="20,10,20,10">
                        <DataGrid Name="VersionsDataGrid" AutoGenerateColumns="False" IsReadOnly="True" 
                                 Background="Transparent" BorderThickness="0" GridLinesVisibility="Horizontal"
                                 RowBackground="White" AlternatingRowBackground="#FAFAFA"
                                 HeadersVisibility="Column" SelectionChanged="VersionsDataGrid_SelectionChanged"
                                 SelectionMode="Extended">
                            <DataGrid.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Header="👁️ Voir cette version" Click="ViewVersionMenuItem_Click"/>
                                    <MenuItem Header="⏮️ Restaurer cette version" Click="RestoreVersionMenuItem_Click"/>
                                    <Separator/>
                                    <MenuItem Header="🔍 Comparer avec actuelle" Click="CompareVersionMenuItem_Click"/>
                                    <MenuItem Header="📋 Copier le contenu" Click="CopyVersionMenuItem_Click"/>
                                    <Separator/>
                                    <MenuItem Header="🌐 Voir sur GitHub" Click="ViewOnGitHubMenuItem_Click"/>
                                </ContextMenu>
                            </DataGrid.ContextMenu>
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="📌 Version" Binding="{Binding Version}" Width="120">
                                    <DataGridTextColumn.HeaderStyle>
                                        <Style TargetType="DataGridColumnHeader">
                                            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
                                            <Setter Property="Foreground" Value="White"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                            <Setter Property="Padding" Value="8"/>
                                        </Style>
                                    </DataGridTextColumn.HeaderStyle>
                                </DataGridTextColumn>
                                
                                <DataGridTextColumn Header="🔗 Commit SHA" Binding="{Binding CommitSha}" Width="140">
                                    <DataGridTextColumn.HeaderStyle>
                                        <Style TargetType="DataGridColumnHeader">
                                            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
                                            <Setter Property="Foreground" Value="White"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                            <Setter Property="Padding" Value="8"/>
                                        </Style>
                                    </DataGridTextColumn.HeaderStyle>
                                </DataGridTextColumn>
                                
                                <DataGridTextColumn Header="👤 Auteur" Binding="{Binding Author}" Width="150">
                                    <DataGridTextColumn.HeaderStyle>
                                        <Style TargetType="DataGridColumnHeader">
                                            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
                                            <Setter Property="Foreground" Value="White"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                            <Setter Property="Padding" Value="8"/>
                                        </Style>
                                    </DataGridTextColumn.HeaderStyle>
                                </DataGridTextColumn>
                                
                                <DataGridTextColumn Header="📅 Date" Binding="{Binding Date, StringFormat=dd/MM/yyyy HH:mm}" Width="130">
                                    <DataGridTextColumn.HeaderStyle>
                                        <Style TargetType="DataGridColumnHeader">
                                            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
                                            <Setter Property="Foreground" Value="White"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                            <Setter Property="Padding" Value="8"/>
                                        </Style>
                                    </DataGridTextColumn.HeaderStyle>
                                </DataGridTextColumn>
                                
                                <DataGridTextColumn Header="💬 Message" Binding="{Binding Message}" Width="*">
                                    <DataGridTextColumn.HeaderStyle>
                                        <Style TargetType="DataGridColumnHeader">
                                            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
                                            <Setter Property="Foreground" Value="White"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                            <Setter Property="Padding" Value="8"/>
                                        </Style>
                                    </DataGridTextColumn.HeaderStyle>
                                </DataGridTextColumn>
                                
                                <DataGridTextColumn Header="📊 Changements" Binding="{Binding ChangesCount}" Width="120">
                                    <DataGridTextColumn.HeaderStyle>
                                        <Style TargetType="DataGridColumnHeader">
                                            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
                                            <Setter Property="Foreground" Value="White"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                            <Setter Property="Padding" Value="8"/>
                                        </Style>
                                    </DataGridTextColumn.HeaderStyle>
                                </DataGridTextColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Border>
                    
                    <!-- Zone d'informations sur la version sélectionnée -->
                    <Border Grid.Row="2" Background="White" BorderBrush="#DDDDDD" BorderThickness="1" CornerRadius="4" Padding="15" Margin="20,10,20,20">
                        <StackPanel Name="SelectedVersionInfo" Visibility="Collapsed">
                            <TextBlock Text="📋 Selected Version" FontSize="14" FontWeight="Bold" 
                                      Foreground="#0066CC" Margin="0,0,0,10"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Column="0" Text="Version:" FontWeight="SemiBold" Margin="0,0,10,0"/>
                                <TextBlock Grid.Column="1" Name="SelectedVersionText" Text="-" Margin="0,0,20,0"/>
                                
                                <TextBlock Grid.Column="2" Text="Auteur:" FontWeight="SemiBold" Margin="0,0,10,0"/>
                                <TextBlock Grid.Column="3" Name="SelectedVersionAuthorText" Text="-"/>
                            </Grid>
                            <Grid Margin="0,5,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Column="0" Text="Message:" FontWeight="SemiBold" Margin="0,0,10,0"/>
                                <TextBlock Grid.Column="1" Name="SelectedVersionMessageText" Text="-" TextWrapping="Wrap"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                </Grid>
            </TabItem>
        </TabControl>
        
        <!-- Barre de statut moderne -->
        <Border Grid.Row="2" Background="White" 
                BorderBrush="#DDDDDD" BorderThickness="0,1,0,0" 
                Padding="25,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Ellipse Width="8" Height="8" Fill="#28A745" 
                            VerticalAlignment="Center" Margin="0,0,8,0"/>
                                            <TextBlock Name="StatusText" Text="Ready" VerticalAlignment="Center" FontWeight="SemiBold"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="❌ Fermer" Click="CloseButton_Click" 
                           Background="#6C757D" Foreground="White" BorderThickness="0" Padding="10,5"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window> 