<Window x:Class="TextLabClient.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Connexion - TextLab Client" 
        Height="450" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F5F5F5">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- En-tÃªte -->
        <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,25">
            <TextBlock Text="ðŸ” Authentification LLM Center" 
                       FontSize="18" FontWeight="Bold" 
                       HorizontalAlignment="Center"
                       Foreground="#0078D4"/>
        </StackPanel>

        <!-- Formulaire -->
        <StackPanel Grid.Row="1" Margin="0,0,0,25">
            <TextBlock Text="Email :" FontWeight="Bold" Margin="0,0,0,8"/>
            <TextBox Name="EmailTextBox" 
                     Height="40"
                     Padding="12"
                     BorderThickness="1"
                     BorderBrush="#E1E1E1"
                     FontSize="14"
                     Text="jfgaudy@outlook.com"/>

            <TextBlock Text="Mot de passe :" FontWeight="Bold" Margin="0,20,0,8"/>
            <PasswordBox Name="PasswordBox" 
                         Height="40"
                         Padding="12"
                         BorderThickness="1"
                         BorderBrush="#E1E1E1"
                         FontSize="14"/>

            <CheckBox Name="RememberMeCheckBox" 
                      Content="Se souvenir de moi" 
                      Margin="0,20,0,15"
                      FontSize="14"
                      IsChecked="True"/>

            <TextBlock Name="StatusTextBlock" 
                       Text="" 
                       HorizontalAlignment="Center"
                       Foreground="Red"
                       FontWeight="Bold"
                       FontSize="13"
                       Margin="0,10,0,0"
                       TextWrapping="Wrap"
                       Visibility="Collapsed"/>
            
            <ProgressBar Name="LoadingProgressBar"
                         Height="4"
                         Margin="0,10,0,0"
                         Visibility="Collapsed"
                         IsIndeterminate="True"/>
        </StackPanel>

        <!-- Boutons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
            <Button Name="LoginButton" 
                    Content="ðŸš€ Se connecter"
                    Background="#0078D4"
                    Foreground="White"
                    FontWeight="Bold"
                    Width="180"
                    Height="45"
                    FontSize="14"
                    Margin="0,0,15,0"
                    Click="LoginButton_Click"
                    IsDefault="True"/>
            
            <Button Name="CancelButton" 
                    Content="Annuler"
                    Background="White"
                    Foreground="#0078D4"
                    BorderBrush="#0078D4"
                    BorderThickness="1"
                    Width="120"
                    Height="45"
                    FontSize="14"
                    Click="CancelButton_Click"
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window> 