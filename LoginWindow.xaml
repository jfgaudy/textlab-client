<Window x:Class="TextLabClient.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Connexion - TextLab Client" 
        Height="500" Width="550"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F5F5F5">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- En-tÃªte -->
        <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,30">
            <TextBlock Text="ðŸ” Authentification LLM Center" 
                       FontSize="16" FontWeight="Bold" 
                       HorizontalAlignment="Center"
                       Foreground="#0078D4"/>
        </StackPanel>

        <!-- Formulaire -->
        <StackPanel Grid.Row="1" Margin="0,0,0,20">
            <!-- Option 1: Login classique -->
            <GroupBox Header="ðŸ” Option 1 : Authentification LLM Center" Padding="10" Margin="0,0,0,15">
                <StackPanel>
                    <TextBlock Text="Email :" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBox Name="EmailTextBox" 
                             Height="35"
                             Padding="10"
                             BorderThickness="1"
                             BorderBrush="#E1E1E1"
                             Text="jfgaudy@outlook.com"/>

                    <TextBlock Text="Mot de passe :" FontWeight="Bold" Margin="0,15,0,5"/>
                    <PasswordBox Name="PasswordBox" 
                                 Height="35"
                                 Padding="10"
                                 BorderThickness="1"
                                 BorderBrush="#E1E1E1"/>
                </StackPanel>
            </GroupBox>

            <!-- Option 2: Token direct -->
            <GroupBox Header="ðŸŽ¯ Option 2 : Token direct (Bypass)" Padding="10" Margin="0,0,0,15">
                <StackPanel>
                    <TextBlock Text="Token JWT :" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBox Name="TokenTextBox" 
                             Height="60"
                             Padding="10"
                             BorderThickness="1"
                             BorderBrush="#E1E1E1"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             VerticalScrollBarVisibility="Auto"
                             FontFamily="Consolas"
                             FontSize="10"/>
                </StackPanel>
            </GroupBox>

            <CheckBox Name="RememberMeCheckBox" 
                      Content="Se souvenir de moi" 
                      Margin="0,0,0,0"
                      IsChecked="True"/>

            <TextBlock Name="StatusTextBlock" 
                       Text="" 
                       HorizontalAlignment="Center"
                       Foreground="Red"
                       FontWeight="Bold"
                       Margin="0,15,0,0"
                       Visibility="Collapsed"/>
            
            <ProgressBar Name="LoadingProgressBar"
                         Height="4"
                         Margin="0,10,0,0"
                         Visibility="Collapsed"
                         IsIndeterminate="True"/>
        </StackPanel>

        <!-- Boutons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Name="LoginButton" 
                    Content="ðŸš€ UTILISER AUTHENTIFICATION"
                    Background="#0078D4"
                    Foreground="White"
                    FontWeight="Bold"
                    Width="200"
                    Height="40"
                    Margin="0,0,10,0"
                    Click="LoginButton_Click"
                    IsDefault="True"/>
            
            <Button Name="CancelButton" 
                    Content="Annuler"
                    Background="White"
                    Foreground="#0078D4"
                    BorderBrush="#0078D4"
                    BorderThickness="1"
                    Width="100"
                    Height="40"
                    Click="CancelButton_Click"
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window> 