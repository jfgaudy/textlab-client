<Window x:Class="TextLabClient.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TextLab - Login" 
        Height="500" Width="420"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="White">

    <Window.Resources>
        <!-- Style pour les TextBox -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Focusable="false" 
                                        HorizontalScrollBarVisibility="Hidden" 
                                        VerticalScrollBarVisibility="Hidden"
                                        Padding="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#0078D4"/>
                                <Setter Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style pour les PasswordBox -->
        <Style x:Key="ModernPasswordBox" TargetType="PasswordBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Focusable="false" 
                                        HorizontalScrollBarVisibility="Hidden" 
                                        VerticalScrollBarVisibility="Hidden"
                                        Padding="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#0078D4"/>
                                <Setter Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style pour le bouton principal -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#106EBE"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#005A9E"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#CCCCCC"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style pour le bouton secondaire -->
        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F5F5F5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Carte principale centrée -->
        <Border Background="White" 
                CornerRadius="16" 
                Margin="30">
            <Border.Effect>
                <DropShadowEffect Color="#000000" 
                                Opacity="0.1" 
                                BlurRadius="20" 
                                ShadowDepth="0"/>
            </Border.Effect>
            
            <StackPanel Margin="30" VerticalAlignment="Top">
                
                <!-- Logo et titre -->
                <StackPanel HorizontalAlignment="Center" Margin="0,10,0,25">
                    <TextBlock Text="🔬" FontSize="40" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                    <TextBlock Text="TextLab" 
                             FontSize="24" 
                             FontWeight="Bold" 
                             HorizontalAlignment="Center"
                             Foreground="#2D3748"
                             Margin="0,0,0,5"/>
                    <TextBlock Text="Login to your workspace" 
                             FontSize="13" 
                             HorizontalAlignment="Center"
                             Foreground="#718096"/>
                </StackPanel>

                <!-- Formulaire -->
                <StackPanel>
                    <!-- Email -->
                    <TextBlock Text="Email" 
                             FontWeight="Medium" 
                             FontSize="14" 
                             Foreground="#4A5568" 
                             Margin="0,0,0,8"/>
                    <TextBox Name="EmailTextBox" 
                           Style="{StaticResource ModernTextBox}"
                           Text="jfgaudy@outlook.com"
                           Margin="0,0,0,15"/>

                    <!-- Mot de passe -->
                    <TextBlock Text="Password" 
                             FontWeight="Medium" 
                             FontSize="14" 
                             Foreground="#4A5568" 
                             Margin="0,0,0,8"/>
                    <PasswordBox Name="PasswordBox" 
                               Style="{StaticResource ModernPasswordBox}"
                               Margin="0,0,0,15"/>

                    <!-- Options -->
                    <CheckBox Name="RememberMeCheckBox" 
                            Content="Remember me" 
                            FontSize="13"
                            Foreground="#718096"
                            IsChecked="True"
                            Margin="0,0,0,20"/>

                    <!-- Status -->
                    <TextBlock Name="StatusTextBlock" 
                             Text="" 
                             HorizontalAlignment="Center"
                             Foreground="#E53E3E"
                             FontSize="13"
                             TextWrapping="Wrap"
                             Visibility="Collapsed"
                             Margin="0,0,0,10"/>
                    
                    <!-- Progress -->
                    <ProgressBar Name="LoadingProgressBar"
                               Height="3"
                               Visibility="Collapsed"
                               IsIndeterminate="True"
                               Background="#F7FAFC"
                               Foreground="#0078D4"
                               Margin="0,0,0,15"/>

                    <!-- Boutons -->
                    <Button Name="LoginButton" 
                          Content="🚀 Login"
                          Style="{StaticResource PrimaryButton}"
                          Click="LoginButton_Click"
                          IsDefault="True"
                          Margin="0,0,0,10"/>
                    
                    <Button Name="CancelButton" 
                          Content="❌ Cancel"
                          Style="{StaticResource SecondaryButton}"
                          Click="CancelButton_Click"
                          IsCancel="True"/>
                </StackPanel>

            </StackPanel>
        </Border>
    </Grid>
</Window> 